package Hw2;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

public class MyOthello {
	
	
	public static void main(String[] args) {
		
		
		// Set up my JFrame and JButton here:
		
		JFrame frame = new JFrame("My Othello");
		frame.setSize(800,800);
		
		final JButton button = new JButton("Click To Change Turns if No Options!");	
		button.setHorizontalAlignment(JLabel.CENTER);
		frame.add(button, BorderLayout.NORTH);
		
		
		// initialize gameBoard and mouse Listener and link the two
		
		Gameboard board  = new Gameboard();
		 final GameMouseListener listener = new GameMouseListener(board);		
		board.addMouseListener(listener);
		
		
		// every time the button  is pressed, it changes the color and sends message of who's turn
		
		button.addActionListener(new ActionListener() { 
			  public void actionPerformed(ActionEvent e) { 
			   listener.counter  ++;
			   
			   if( listener.counter % 2 == 0        ) {
					 JOptionPane.showMessageDialog(null, "NOW IT IS BLACK'S TURN");
				}
				else {
					 JOptionPane.showMessageDialog(null, "NOW IT IS WHITE'S TURN");
				}  
			  } 
			} );
		
		// add board class with paint component to frame and send message of who's turn
		frame.add(board);
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		 JOptionPane.showMessageDialog(null, "IT IS WHITE'S TURN TO  START!");
		
	}

	
	
}
